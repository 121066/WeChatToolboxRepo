/* pages/imageProcess/imageProcess.wxss */
.container {
  padding: 32rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.image-container {
  width: 100%;
  height: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.options-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.options-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.size-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.size-item {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.size-item.active {
  background: #007aff;
  color: #fff;
}

.color-options {
  display: flex;
  gap: 16rpx;
}

.color-item {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
  position: relative;
  border: 2rpx solid transparent;
}

.color-item.active {
  border-color: #007aff;
}

.button-container {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.action-button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 0;
}

button[type="primary"] {
  background: #007aff;
}

button[disabled] {
  opacity: 0.5;
}
