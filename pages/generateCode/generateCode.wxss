.container {
  padding: 32rpx;
  background: #f7f8fa;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.type-switch {
  width: 320rpx;
  display: flex;
  background: #fff;
  border-radius: 32rpx;
  padding: 6rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.type-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 28rpx;
  transition: all 0.3s;
}

.type-item.active {
  background: #007aff;
  color: #fff;
}

.input-area {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-content {
  width: 100%;
  height: 180rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.bar-input {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.number-input {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.input-tips {
  font-size: 24rpx;
  color: #999;
  padding-left: 12rpx;
}

.generate-button {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 0 0 32rpx 0;
  background: #007aff;
  color: #fff;
}

.preview-area {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.code-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 24rpx;
}

.save-button {
  width: 240rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
  margin: 0;
  background: #f5f5f5;
  color: #333;
}

button:active {
  opacity: 0.8;
  transform: scale(0.98);
  transition: all 0.2s;
}
